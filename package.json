{
  "name": "express-ES2017",
  "version": "1.0.0",
  "description": "Using latest JavaScript features on the server",
  "license": "MIT",
  "main": "build/index.js",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.7.1"
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "npm run clean && mkdir -p build && babel src -s -D -d build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && open coverage/lcov-report/index.html",
    "precommit": "lint-staged",
    "prestart": "npm run build",
    "dev": "nodemon ./ --exec \"node -r babel-register\"",
    "update": "ncu -u",
    "clean": "rimraf build",
    "lint": "esw -w src test",
    "lint:fix": "eslint src test --fix"
  },
  "keywords": [
    "express",
    "babel",
    "boilerplate",
    "scaffold",
    "ES2018",
    "jest",
    "eslint",
    "eslint",
    "prettier",
    "lint-staged"
  ],
  "dependencies": {
    "address": "1.0.3",
    "babel-cli": "6.26.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "body-parser": "1.18.3",
    "bootstrap": "3.3.7",
    "debug": "latest",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-prettier": "2.6.0",
    "express": "4.16.3",
    "handlebars": "4.0.11",
    "handlebars-layout": "0.1.4",
    "handlebars-layouts": "3.1.4",
    "hbs": "4.0.1",
    "joi": "13.3.0",
    "jquery": "3.3.1",
    "morgan": "1.9.0",
    "npm-check-updates": "2.14.2",
    "prettier": "1.12.1",
    "rimraf": "2.6.2"
  },
  "devDependencies": {
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.4",
    "babel-register": "6.26.0",
    "dotenv": "5.0.1",
    "eslint": "4.19.1",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jest": "21.15.1",
    "eslint-watch": "3.1.4",
    "husky": "0.14.3",
    "jest": "22.4.4",
    "lint-staged": "7.1.2",
    "nodemon": "1.17.4",
    "supertest": "3.1.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
